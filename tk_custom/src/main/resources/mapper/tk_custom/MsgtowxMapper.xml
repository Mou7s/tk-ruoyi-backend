            <if test="createtime != null "> and createtime = #{createtime}</if>
            <if test="parentid != null  and parentid != ''"> and parentid = #{parentid}</if>
            <if test="msg != null  and msg != ''"> and msg = #{msg}</if>
        </where>
        order by id DESC ;
    </select>
    
    <select id="selectMsgtowxById" parameterType="Long" resultMap="MsgtowxResult">
        <include refid="selectMsgtowxVo"/>
        where id = #{id}
    </select>

    <insert id="insertMsgtowx" parameterType="Msgtowx" useGeneratedKeys="true" keyProperty="id">
