    <update id="updateMsgtowx" parameterType="Msgtowx">
        update msgtowx
        <trim prefix="SET" suffixOverrides=",">
            <if test="type != null">type = #{type},</if>
            <if test="isSend != null">isSend = #{isSend},</if>
